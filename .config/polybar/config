[colors]
mono0 = #282c34
mono1 = #545862
mono2 = #abb2bf
mono3 = #c8ccd4
red = #e06c75
green = #98c379
yellow = #e5c07b
blue = #61afef
purple = #c678dd
teal = #56b6c2
mono4 = #353b45

[bar/eDP1]
monitor = ${env:MONITOR:eDP1}
bottom = true
fixed-center = true

width = 100%
height = 25
offset-x = 0%
offset-y = 0%
radius = 0.0

background = ${colors.mono0}
foreground = ${colors.green}

line-size = 3
line-color = #f00

border-size = 0
border-color = #00282c34

padding-left = 0
padding-right = 0

module-margin-left = 0
module-margin-right = 0

font-0 = Source Han Code JP H:pixelsize=11;2
font-1 = FontAwesome:pixelsize=12;3

modules-left = i3 add_ws
modules-center = xwindow
modules-right = update bluetooth mpd network memory battery volume date

separator =
dim-value = 1.0

;tray-position = 
;tray-padding = 0
;tray-transparent = false
;tray-background = ${root.background}

;wm-restack = i3
;override-redirect = true
enable-ipc = true

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

cursor-click = pointer
cursor-scroll = default

